@model IEnumerable<TrabajoProyecto.Models.Carrera>

@{
    ViewData["Title"] = "Index";
}
<!-- Modal -->
<div class="modal fade" id="ModalCarrera" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Carreras</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="CarreraID" value="0" />
                <div>
                    <label class="control-label">Nombre</label>
                    <input type="text" class="form-control" id="NombreCarrera" autocomplete="off"
                        onkeyup="this.value = this.value.toUpperCase()" required />
                </div>
                <div>
                    <label class="control-label">Duracion</label>
                    <input type="number" class="form-control" id="Duracion" placeholder="AÃ‘OS"
                        autocomplete="off" required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" onclick="GuardarCarrera()" class="btn btn-primary">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>

<h1>Index</h1>


<div>
    <h1 class="display-4">Carrera</h1>


    @{
        if (User.Identity.IsAuthenticated)
        {

            <div class="mb-2">
                <button type="button" onclick="VaciarFormulario()" class="btn btn-primary boton2" data-bs-toggle="modal"
                    data-bs-target="#ModalCarrera">
                    Nuevo
                </button>
            </div>
        }
        else
        {
        }
    }




    <table class="table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th>Nombre Carrera</th>
                <th>Duracion</th>
            </tr>

        </thead>
        <tbody id="tbody-carreras">
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/js/carreras.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
}
